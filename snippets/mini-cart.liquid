        	<path fill-rule="evenodd" clip-rule="evenodd" d="M7.93795 16.1934H17.389L19 8.85666H7.79475L7.15036 5.82773H4L4.358 7.14026H5.96897L7.93795 16.1934ZM9.11893 19.8275C8.36714 19.8275 7.75854 19.2553 7.75854 18.5486C7.75854 17.8418 8.36714 17.2697 9.11893 17.2697C9.87072 17.2697 10.4793 17.8418 10.4793 18.5486C10.4793 19.2553 9.87072 19.8275 9.11893 19.8275ZM16.208 19.8275C15.4562 19.8275 14.8477 19.2553 14.8477 18.5486C14.8477 17.8418 15.4562 17.2697 16.208 17.2697C16.9598 17.2697 17.5684 17.8418 17.5684 18.5486C17.5684 19.2553 16.924 19.8275 16.208 19.8275Z" fill="black"/>
        </svg>

        {% if cart.item_count > 0 %}   
          <div id="cartCount" data-cart-count> 
            {{ cart.item_count }}
          </div>
        {% endif %}
      
      {% endif %}       
      
      {% if settings.header_style_1 == 'style_10' %}     
      <div class="detail">
        <div class="mini-inner-detail-cart">
          <i class="fas fa-shopping-cart"></i>
          <div id="cartCount" data-cart-count> 
          ({{ cart.item_count }})
          </div>
        </div>
      </div>
      {% endif %}      
    </a> 
    
    
</div>



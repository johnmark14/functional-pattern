<!-- Mini Cart Start -->
<div class="baskettop">
    <a href="#" class="{% if settings.header_style_1 != 'style_8' %}icon-cart-arrow cart-icon{% else %} cart-btn{% endif %}" data-cart-toggle>
      {% if settings.header_style_1 == 'style_7' or settings.header_style_1 == 'style_2'   %}
      <i class="fas fa-shopping-basket"></i>
      <div class="detail">
        <div id="cartCount" data-cart-count> 
          {{ cart.item_count }}
        </div>
      </div>
      {% endif %}
      {% if settings.header_style_1 == 'style_1' %}
      <i class="fas fa-shopping-bag"></i>
      <div class="detail">
        <div id="cartCount" data-cart-count> 
          {{ cart.item_count }}
        </div>
        {% if cart.item_count == 0 or cart.item_count == 1 %}
        <span class="cartCountspan">{{ 'cart.general.item' | t }}</span>
        {% else %}  
        <span class="cartCountspan">{{ 'cart.general.items' | t }} </span>
        {% endif %}
        <div id="minicart_total">
          <span> {{ cart.total_price | money }}</span>
        </div>
      </div>
      {% endif %}
      {% if settings.header_style_1 == 'style_3' %}
      <i class="fas fa-shopping-bag"></i>
      <div class="detail">
        <div id="cartCount" data-cart-count> 
          {{ cart.item_count }}
        </div>
      </div>
      {% endif %}
      {% if settings.header_style_1 == 'style_5' or settings.header_style_1 == 'style_9' %}      

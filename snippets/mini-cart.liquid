      <div class="detail">
        <div id="cartCount" data-cart-count> 
          {{ cart.item_count }}
        </div>
        {% if cart.item_count == 0 or cart.item_count == 1 %}
        <span class="cartCountspan">{{ 'cart.general.item' | t }}</span>
        {% else %}  
        <span class="cartCountspan">{{ 'cart.general.items' | t }} </span>

        {% endif %}
        <div id="minicart_total">
          <span> {{ cart.total_price | money }}</span>
        </div>
      </div>
      {% endif %}
      {% if settings.header_style_1 == 'style_6' %}
      <div class="detail">
        <i class="fas fa-shopping-cart" aria-hidden="true"></i>
        <div class="mini-inner-detail-cart">
          {{ 'cart.general.mini_cart_title' | t }}
          <br>           
          <div class="mini-inner-detail">
            <div id="cartCount" data-cart-count> 
              {{ cart.item_count }}
            </div>
            {% if cart.item_count == 0 or cart.item_count == 1 %}
            <span class="cartCountspan">{{ 'cart.general.item' | t }}</span>
            {% else %}  
            <span class="cartCountspan">{{ 'cart.general.items' | t }} </span>
            {% endif %}
            <div id="minicart_total">
              -  <span> {{ cart.total_price | money_without_currency }}</span>
            </div>
          </div>
        </div>
      </div>
      {% endif %}


      {% if settings.header_style_1 == 'style_4'   %}
      <div class="detail">
        <div id="cartCount" data-cart-count> 
          {{ cart.item_count }} 
        </div>
      </div>
      {% endif %}

      {% if settings.header_style_1 == 'style_8'   %}


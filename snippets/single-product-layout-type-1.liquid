  .swatch .tooltip{ {% if section.settings.color_tooltip %} display:block; {% else %} display:none; {% endif %}}
  
 

  .single-product-layout-type-1 .product-img-box.has-jcarousel .product-photo-container { {% if section.settings.display_product_thumb_img %} width:80%; {% else %} width:100%; {% endif %} }
</style>



{% unless page.metafields.accentuate.hero_content == blank %}
  <div class="hero-section p-relative">
    <div class="no-padding">      
      {% assign video = page.metafields.accentuate.video_page_content %}      
      {% for bg_img in page.metafields.accentuate.hero_content %}
        <div class="video-wrapper with-popup p-relative">       
          <div class="p-video" style="background-image: url('{{ bg_img.src }}')">
<!--             <video class="hero-video">
              <source src="{{ video }}" type="video/mp4">   
              <source src="{{ video }}" type="video/ogg">
            </video>                         -->
            {% if video != blank %}
              <a class="jas-popup-url no-video-summary" href="{{ video }}"><i class="fas fa-play icons" aria-hidden="true"></i></a>
              <h4 class="video-summary">{{ page.metafields.accentuate.video_label_page_content }}</h4> 
            {% endif %}
          </div>                                                                                                                    
        </div>  
      {% endfor %}
    </div>
  </div>
{% endunless %}
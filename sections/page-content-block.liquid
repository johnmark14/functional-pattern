{% if page.metafields.accentuate.cb_image != blank %}

<div class="content-block-section video-addbox">

  <div class="dt-sc-hr-invisible-large"></div>

  <div class="container p-relative">
    
    {% assign video_url = page.metafields.accentuate.cb_video %}    
    {% for media_bg_data in page.metafields.accentuate.cb_image %}

      {% capture media_layout %}
        <div class="video-wrapper with-popup p-relative">
          {% if video_url[forloop.index0] != blank %}
            <div class="p-video">
              <video class="course-video" preload="auto" poster="{{ media_bg_data[0].src }}">
                <source src="{{  video_url[forloop.index0] }}" type="video/mp4">                                    
              </video>
              <a href="{{ video_url[forloop.index0] }}" class="jas-popup-url"><i class="fas fa-play icons" aria-hidden="true"></i></a>              
            </div>          
          {% else %}
            <div class="p-video">
              <video class="course-video" preload="auto" poster="{{ media_bg_data[0].src }}">
                <source src="{{ video_url[forloop.index0].src }}" type="video/mp4">                                    
              </video>              
            </div>
          {% endif %}
        </div>    
      {% endcapture %}

      {% capture text_layout %}
        <div class="course-content-inner">
          {{ page.metafields.accentuate.cb_text_block[forloop.index0].html }}
        </div>    
      {% endcapture %}    

      <div class="p-relative video-text-block-inner">
        {% if page.metafields.accentuate.cb_position_of_text_block[forloop.index0] == 'right' %}
          <div class="grid-uniform video-banner-block v1 d-flex">
            <div class="video-image grid__item">
              {{ media_layout }}
            </div>      
            <div class="course-content grid__item ">
              {{ text_layout }}
            </div>
          </div>
        {% else %}
          <div class="grid-uniform video-banner-block v2 d-flex">
            <div class="course-content grid__item ">
              {{ text_layout }}
            </div>
            <div class="video-image grid__item">
              {{ media_layout }}
            </div>
          </div>
        {% endif %}    
      </div>
    {% endfor %}
    
  </div>

 </div>
{% endif %}
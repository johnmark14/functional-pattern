
<a href="#" class="icon-nav close-menu-mb" title="Menu Mobile Icon" data-menu-mb-toogle>
  <span class="icon-line"></span>
</a>    
<div class="grid__item menubar_inner header-bottom" data-sticky-mb>
  <div class="wrapper-header-bt">

    {% include 'header-mobile' %}
    <div class="header-pc">
      <ul class="menu-icon">   
        {% if section.settings.display_wishlist %}
        <li>
          <a href="/pages/wishlist" title="{{ 'products.wishlist.wishlist_name' | t }}"> <i class="fas fa-heart" aria-hidden="true"></i></a>
        </li>
        {% endif %}
        {% if section.settings.display_minicart %}
        <li class="header-bar__module cart header_cart">
          {% include 'mini-cart' %} 
        </li> 
        {% endif %} 
        {% if shop.customer_accounts_enabled  %}
        <li class="menu_bar_right">

          <div class="slidedown_section">
            <a  id="Togglemodal" class="icon-cart-arrow"><i class="fas fa-user" aria-hidden="true"></i></a>
            <div id="slidedown-modal">
              <div class="header-panel-top">
                <div class="customer_account">                          
                  <ul>
                    {% if shop.customer_accounts_enabled %}
                    {% if customer %}
                    <li>
                      <a href="/account" title="{{ 'layout.customer.account' | t }}"><i class="fas fa-user" aria-hidden="true"></i> {{ 'layout.customer.account' | t }}</a>
                    </li>
                    <li class="logout-link">
                      <a href="/account/logout" title="{{ 'layout.customer.log_out' | t }}" data-value="value 1"><i class="fa fa-sign-out-alt"></i>{{ 'layout.customer.log_out' | t }}</a>
                    </li>
                    {% else %}
                    <li>
                      <a href="/account/login" title="{{ 'layout.customer.log_in' | t }}"> <i class="fa fa-sign-in-alt icons" aria-hidden="true"></i> {{ 'layout.customer.log_in' | t }}</a>
                    </li>
                    <li>
                      <a href="/account/register" title="{{ 'layout.customer.create_account' | t }}">  <i class="fas fa-user" aria-hidden="true"></i> {{ 'layout.customer.create_account' | t }}</a>
                    </li>          
                    {% endif %}  
                    {% endif %} 

                  </ul>
                </div>    

              </div>
            </div>
          </div>


        </li>
        {% endif %}  

        {% if section.settings.display_search %} 
        {% if settings.search_model == 'search_type2' %}
        <li class="search-categories-section seeks post-large--hide large--hide medium-down--hide">
          <div class="header-search">
            <a href="#" class="site-header__link site-header__search" id="search_trigger">

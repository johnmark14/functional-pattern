        {% include 'adv-search-model' %}
        {% endif %}

        {% if settings.search_model == 'search_type1' %}
        {% unless settings.display_fixtop_menu %}
        {% include 'mobile-search' %}
        {% endunless %}
        {% endif %}

        {% endif %} 

      </ul>

    </div>
  </div>
</div>

<style> 
  @media only screen and (min-width:1200px) { 
    /* Top block */
    .header-type-3 .top_bar { background: {{ section.settings.top_bar_bg }}; }
    .header-type-3 .top_bar li { color:{{section.settings.top_bar_text}};}   
    .header-type-3 .top_bar a { color:{{section.settings.top_bar_links }};}    
    .header-type-3 .top_bar a:hover, .header-type-3 .top_bar a:hover span { color:{{section.settings.top_bar_link_hover }};}    
    .header-type-3 .header-bar__module.cart .baskettop a.icon-cart-arrow #cartCount { background: {{ section.settings.minicart_count_bg }};color:{{section.settings.minicart_count }};}
    .header-type-3 .header-bar__module.cart .baskettop a.icon-cart-arrow:hover #cartCount { background: {{ section.settings.minicart_count_hover_bg }};color:{{section.settings.minicart_count_hover_text }};}


    /* Logo block */
    .header-type-3 .site-header__logo a  { color:{{section.settings.logo_text }};}
    .header-type-3 .site-header__logo a:hover  { color:{{section.settings.logo_hover_text }};}    

    /* Menu  block */
    .header-type-3 .site-header,.mobile-nav-section ,.header-type-3 .sticky-animate,.banner-slideshow:before{background: {{ section.settings.menubar_bg }};}
    .header-type-3 .desktop-megamenu ul> li {color: {{ section.settings.menubar_text }};}
    .header-type-3 .desktop-megamenu ul> li> a,.mobile-nav-section .mobile-nav-trigger,.header-type-3 .wishlist {color:{{section.settings.menubar_links}};}  
    .header-type-3 .desktop-megamenu ul> li:hover > a,.header-type-3 .menu-tool .site-nav > li:hover > a.current,.header-type-3 .wishlist:hover {color:{{section.settings.menubar_links_hover}};} 
    .header-type-3 .desktop-megamenu .site-nav >  li > a.current {color:{{section.settings.menu_active}};}
    .header-type-3 .site-nav-dropdown,#MobileNav,.mobile-nav__sublist { background: {{ section.settings.menubar_dropdown_bg }};}
    .header-type-3 .site-nav-dropdown .inner > a,.header-type-3 .site-nav .mega-banner .title,.header-type-3 .site-nav .mega-banner .regular-product {color: {{ section.settings.menubar_dropdown_caption }};}    
    .header-type-3 .desktop-megamenu .site-nav-dropdown .inner > a:hover,.header-type-3 .site-nav .mega-menu .product-item .product-title:hover {color: {{ section.settings.menubar_dropdown_caption_hover }};}    
    .header-type-3 .desktop-megamenu .site-nav-dropdown li > a,.header-type-3 .menu-tool .site-nav .site-nav-dropdown li a,.header-type-3 .site-nav .mega-menu .product-item .product-title,.header-type-3 .site-nav .widget-featured-product .widget-title h3,#MobileNav a,.mobile-nav__sublist a,.site-nav .widget-featured-nav .owl-prev a,.site-nav .widget-featured-nav .owl-next a  {color: {{ section.settings.menubar_dropdown_links }};}
    .header-type-3 .desktop-megamenu .site-nav-dropdown li:hover > a,.header-type-3 .menu-tool .site-nav .site-nav-dropdown li a:hover,.header-type-3 .site-nav-dropdown .inner .dropdown a.current,.header-type-3 .menu-tool .site-nav .site-nav-dropdown li a.current,.header-type-3 .site-nav .mega-menu .product-item .product-title:hover,#MobileNav a.current,.mobile-nav__sublist a.current,.site-nav .widget-featured-nav .owl-prev a:hover,.site-nav .widget-featured-nav .owl-next a:hover {color: {{ section.settings.menubar_dropdown_links_hover }};}    
   
   
    .header-type-3 .header-search svg {fill:{{section.settings.search_icon}};} 
    .header-type-3 .header-search svg:hover {fill:{{section.settings.search_icon_hover}};} 
    
    
    /* Dropdown block */
    .header-type-3 #Togglemodal i {color: {{ section.settings.dropdown_icon }};}
    .header-type-3 #Togglemodal i:hover {color: {{ section.settings.dropdown_icon_hover }};}
    .header-type-3 #slidedown-modal {background: {{ section.settings.dropdown_bg }};}
    .header-type-3 #slidedown-modal ul li a {color:{{section.settings.dropdown_link}};} 
    .header-type-3 #slidedown-modal ul li a:hover {color:{{section.settings.dropdown_hover_link}};} 




    /* Search block */     
    .header-type-3 .search-bar input[type="search"] {color:{{section.settings.search_text }};} 
    .header-type-3 .header-search span  {color:{{section.settings.search_icon}};} 
    .header-type-3 .header-search span:hover {color:{{section.settings.search_icon_hover }};} 



    .header-type-3 .search-bar__form, .header-type-3 #SearchDrawer,.header-type-3 .search-bar  {  background:{{section.settings.search_bg }};} 
    
    .header-type-3 .search-bar input[type="search"]::-webkit-input-placeholder  { /* Chrome/Opera/Safari */
      color:{{section.settings.search_text }};
    }
    .header-type-3 .search-bar input[type="search"]::-moz-placeholder { /* Firefox 19+ */
      color:{{section.settings.search_text }};
    }
    .header-type-3 .search-bar input[type="search"]:-ms-input-placeholder { /* IE 10+ */
      color:{{section.settings.search_text }};
    }
    .header-type-3 .search-bar input[type="search"]:-moz-placeholder { /* Firefox 18- */
      color:{{section.settings.search_text }};
    }
    /* Cart Summary block */
    .header-type-3 a.icon-cart-arrow i  {color: {{ section.settings.minicart_icon }};}
    .header-type-3 a.icon-cart-arrow:hover i {color: {{ section.settings.minicart_icon_hover }};}
    .header-type-3 #slidedown-cart .actions, .header-type-3  #slidedown-cart  {background: {{ section.settings.minicart_bg }};}
    .header-type-3 .header-bar__module p {color: {{ section.settings.minicart_text }};}
    .header-type-3 .header-bar__module a {color:{{section.settings.minicart_link }};}  
    .header-type-3 .header-bar__module a:hover {color:{{section.settings.minicart_link_hover}};} 
    .header-type-3 .header-bar__module .btn {color:{{section.settings.minicart_btn_text}};background: {{ section.settings.minicart_btn_bg }};} 
    .header-type-3 .header-bar__module .btn:hover {color:{{section.settings.minicart_btn_hover_text}};background: {{ section.settings.minicart_btn_hover_bg }};} 
    .header-type-3  #slidedown-cart .total .price, .header-type-3 #minicart_total,.header-type-3 #slidedown-cart ul li .cart-collateral {color:{{section.settings.minicart_total }};} 
  }
</style> 






        {% if section.settings.title != blank %}
        <h2 class="section-header__title" style="color:{{ section.settings.title_clr }};">    
          {{ section.settings.title }}
        </h2>
        {% endif %}  
        {% if section.settings.small_title != blank %}
        <div class="short-desc"><p style="color:{{ section.settings.text_clr }};">{{ section.settings.small_title }}</p></div>
        {% endif %}                
      </div>
    </div>      
    {% endif %}

    <div class="grid-uniform featuredItems">  
      <div class="grid__item wide--one-quarter post-large--one-quarter large--one-quarter medium--grid__item">
        <div class="middle-top">
          <div class="overlay {{ section.settings.overlay_type1 }}">
            <div class="featured-image">
              {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
              {% if section.settings.image_1 != blank %}
              <img src="{{ section.settings.image_1 | img_url: '1000X' }}" alt="{{ section.settings.title_1 }}" />
              {% if section.settings.use_overlay %}
              <div class="ovrly"></div>
              {% endif%}
              {% else %}
              <img src="//via.placeholder.com/600x500">
              {% endif%}           
              {% if section.settings.link_1 != blank %}  </a>
              {% endif%}
            </div>
            <div class="featured-content featured-content-{{section.type}}-{{section.id}} imageText_position {{ section.settings.image_text_position_1 }}">       
              <div class="content-info" style="background:{{ section.settings.content_bg_1}}">
                {% if section.settings.text_1 != blank %}

        border-color: #EFEFEF;
        width: 58px;
        height: 58px;
        line-height: 58px;
      }
      .dec{
      	border-radius: 3px 0px 0px 3px; 
      }
      .inc{
      	border-radius: 0px 3px 3px 0px; 
      }      
      label{
        width: 100%;
        color: #828282;
        font-size: 16px;
        line-height: 16px;
        font-weight: 400;
        font-family: 'Roboto';
        letter-spacing: 0.1em;
        text-transform: uppercase;
        margin: 5px 0;

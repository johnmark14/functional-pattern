      height: 40px;
      color: #000000;      
    }
    path{
      fill: #000;
    }
  }
  .short-desc{
    color: #828282;
  }
  .quote-author{
    font-weight: 400;
  }
  .rating{
    color: #E51446 !important;
    justify-content: center;

    .fas.fa-star{
      margin: 0 3px;
      font-size: 15px;
    }
  }
  .quote.rte-setting{
    @media screen and (min-width: 768px){
      width: 50%;
      margin: 20px auto 0;
    }
  }
  @media screen and (max-width: 767px){
    .container-fluid{
      padding: 0 20px;
    }
    .quote{
      margin-top: 20px;
    }
  }
  .slick-arrow{
    border: 2px solid #000000 !important;
    color: #000000;
    &:hover{
      color: #000000;
    }
  }  
}
// FAQs section
#shopify-section-equipment-faqs{
  overflow: hidden;
  clear: both;

  .faqs-wrapper{
    clear: both;    
    margin: 0 auto;

    .dt-sc-toggle-frame-set{   
      .dt-sc-toggle-accordion{
        cursor: pointer;        
        border-bottom: 1px solid #e4e4e4;
        border-left: none;
        border-right: none;
        border-top: none;
        
        @media screen and (min-width: 768px){
          padding: 15px 0px 15px 0px;
        }
		@media screen and (max-width: 767px){
          padding: 15px 30px 15px 0px;
        }
        &:before{

          width: 20px;
          height: 20px;
          color: #000;
          right: 8px;
          left: inherit;
          content: "\f067";
        }
        &.active:before{
          content: "\f068";
        }      
      }
      .dt-sc-toggle-content {
        padding: 25px 20px 25px 0px;
        background: transparent;

        p{                
          color: #000000;
          line-height: 24px;
          letter-spacing: 0px;        
        }
      }    
    }
  }
  @media screen and (min-width: 1200px){
    .faqs-wrapper{
	  max-width: 60%;    
    }
    .dt-sc-toggle-accordion{
      font-size: 30px;
    }
  }
  @media screen and (min-width: 768px) and (max-width: 1199px){
    .faqs-wrapper{
	  max-width: 80%;
    }
    .dt-sc-toggle-accordion{
      font-size: 30px;
    }
  }
  @media screen and (max-width: 767px){
    .dt-sc-toggle-accordion{
      font-size: 26px;
      line-height: 26px;
      
      &:before{
        line-height: 20px !important;
    	font-size: 20px;
      }
    }    
  }
  @media screen and (max-width: 767px){
    .dt-sc-toggle-accordion{
      font-size: 22px;
      line-height: 22px;
    }
  }
}

  .no-video-summary i{
    bottom: 0px;
    
    @media screen and (max-width: 420px){
      width: 50px;
      height: 50px;
      line-height: 50px;      
    }
  }
  .video-summary{
    position: absolute;    
    left: 0;
    right: 0;    
    margin: auto;
    width: 100%;    
    text-align: center;
    max-width: 400px;
    color: #fff;
    
    @media screen and (min-width: 421px){
      height: 80px;
      line-height: 80px;
      bottom: 100px;
      top: 150px;
    }    
    @media screen and (max-width: 420px){
      height: 50px;
      line-height: 50px;
    }
    @media screen and (min-width: 376px) and (max-width: 420px){

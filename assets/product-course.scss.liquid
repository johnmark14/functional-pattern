// Video banner section
.course-video-hero{
  position: relative;  

  .video-wrapper{          
    overflow: hidden;
  }
  i{
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;    
    margin: auto;    
    text-align: center;
    color: #ffffff;
    border: 2px solid #ffffff;
    
    @media screen and (min-width: 421px){
      width: 80px;
      height: 80px;
      line-height: 80px;
      bottom: 100px;
      
      &:before{
        position: relative;
        left: 3px;
      }
    }
    @media screen and (max-width: 420px){
      width: 50px;
      height: 50px;
      line-height: 50px;
    }
    @media screen and (min-width: 376px) and (max-width: 420px){
      bottom: 30px;
    }
    @media screen and (min-width: 321px) and (max-width: 375px){
      bottom: 35px;
    }
    @media screen and (max-width: 320px){      
      bottom: 40px;
    }    

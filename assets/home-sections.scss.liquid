            @include transform(translate(-50%, -50%) scale(4));
            transition-duration: var(--photoboxAnimationDuration, .8s);
              }
        }  
        .featured-content {
          @include transition(0.7s ease-in-out);
          @include transform(translateX(0));   

          &.imgtxt-middle {
            @include transform(translate(0, 0));
          }

          &.imgtxt-top-right,
          &.imgtxt-middle-right,
          &.imgtxt-bottom-right {
            @include transform(translateX(0));
          }
        }
      }
    }

    &.style_7 {
      .featured-image {  
        &:before,
        &:after { 
          content:'';
          position: absolute;
          top: 30px;
          right: 30px;
          background-color:{{ settings.black_borders }};
          z-index: 1;
          opacity: 0;
          @include transition(all 0.4s linear);

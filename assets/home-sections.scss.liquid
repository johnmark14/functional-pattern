    }

    &:hover {
      .slick-arrow {
        display:block !important;
        opacity: 1;
      }
    }

    &.slick-dotted {
      margin-bottom:0;
    }

    .slick-active {
      .slider-content {
        visibility: visible;
        opacity: 1;
        z-index: 9999;        
      }
    }

    /* Slider Style 1 */
    .slider_style_1 {
      &.slick-active {
        .slide-heading {

          }
        }      
        &:before {
          width: 0;
          height: 1px;
        }
        &:after {
          width: 1px;
          height: 0;
        }     

        img {
          backface-visibility: hidden;
          vertical-align: top;
        } 

        &.imgtxt-top-left,
        &.imgtxt-top-right {
          &:before,
          &:after {
            top:auto;
            bottom:30px;
            @include at-query ($max, $medium) {
              bottom:20px;
            }
          }
        }

        &.imgtxt-top-right {          
          &:before,
          &:after {
            left:30px;
            right:auto;
            @include at-query ($max, $medium) {
              left:20px;
            }
          }          
        }

        &.imgtxt-middle-right,

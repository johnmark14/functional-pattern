        .ovrly {
          width: 0;
          height: 0;
          padding: 25%;
          border-radius: 50%;  
          top: 50%;
          left: 50%;
          opacity:0.7;
          transition: transform calc(var(--photoboxAnimationDuration, .8s) / 2) linear;

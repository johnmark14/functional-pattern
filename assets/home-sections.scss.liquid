/* Client Logo */
.client-logo {   
  .client-logo-block {
    position:relative;
    float:left;
    width:100%;
    /* overflow:hidden; */

    .grid-uniform {
      margin:0 -15px;
      @include at-query ($max, $semilarge) { 
        margin:0 -10px; 
      }
    }

    .logo-item {
      padding:0 15px;
      @include at-query ($max, $semilarge) { 
        padding:0 10px; 
      }
      a {
        display:block;
        /* background:{{ settings.black_borders | color_modify: 'alpha', 0.03 }}; */
      }
      img {
        display:block;
        margin:0 auto;
      }
    }

    .slick-slider {
      overflow:visible;
      margin-bottom:0;

      .slick-dots {
        bottom:-30px;
      }
    }

    & > :not(.client-carousel) {
      .logo-item {
        margin-bottom:30px;
      }
    }
    .carousel-arrow {
      &.nav-middle {
        top:38%;
        .prev-arrow {
          left:0;
        }
        .next-arrow {
          right:0;
        }
        .slick-disabled {
          opacity:0;
        }
      }

      &.nav-bottom {
        display:inline-block;
        width:100%;
        margin-top:20px;
      }
    }    

    &:hover {
      .carousel-arrow.nav-middle {
        .prev-arrow,
        .next-arrow {
          opacity:1;    
          &.slick-disabled {
            cursor:default;
            opacity:.2;
          }
        }
      }
    }
  }
}

/*specification  Block  */
.specification-icon-block {
  .grid-uniform {
    margin:0 -15px;
    @include at-query ($max, $semilarge) { 
      margin:0 -10px; 
    }
  }

  .icon-block {
    .grid__item {
      padding:0 15px;
      @include at-query ($max, $semilarge) { 
        padding:0 10px 20px; 
      }

      .block-image,
      .block-content {
        float:left;
        width:100%;
      }

      .icon_wrapper {        
        position: relative;
        float: left;
        padding: 30px 100px 30px 0px;
        margin: 10px 0;                
        @include transition(all 0.4s ease-in-out);          
        @include at-query ($max, $postlarge) {
          padding: 15px 100px 15px 0px;
        }         
        .icon {          
          margin-bottom: 20px;
          font-size: 20px;
          float:left;
          text-align:center;
          border-radius: 50%;
          display:block;
          position: absolute;
          height:80px;
          width:80px;

        }
        &.icon-left {
          text-align: right;          
          .icon {
            right: 0;            
          }          
        }
        &.icon-right {
          padding-right:0;
          padding-left:100px;
          @include at-query ($max, $postlarge) {
            padding-right:0;
            padding-left:100px;
          }                     
          .icon {            
            left: 0;            
          }
          .icon-content {
            float: right;                       
            p {
              margin-bottom:0;              
            }
          }
        }
      }
    }   

    &.style1 {
      .block-content {        
        .icon_wrapper {
          cursor:pointer;  
          .icon {
            img {
              opacity:0.75;
            }
          }
          .icon-content {
            h4 {                  
              font-size: 20px;
              font-weight:600;
              margin-bottom:10px;
              @include at-query($max,$postlarge){
                font-size:18px;
                margin-bottom:15px;
              }
            }
          }          
        }
        .slick-slider {
          .slick-track {
            margin:0 -15px;
            .slick-current {
              .icon {
                img {
                  opacity:1;
                }
              }
            }
          }
          .slick-dots {
            bottom:-10px !important;
          }
        }
      }
    }
    &.style2 {
      .center-block {
        margin-top:20px;
        img {
          display:block;
          margin:0 auto;
        }
      }
      .icon-content {
        h4 {
          font-size:16px;
          font-weight:600;
          text-transform:uppercase;
          letter-spacing:0.5px;
        }
      }
    }
  }
}


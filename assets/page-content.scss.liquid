// Content Block
.content-block-section{
  position: relative;  
  overflow: hidden;
  clear: both;
  background-color: #EFEFEF;
  
  .container {
      max-width: 90%;
  }  

  .section-heading h2{
    margin: 0 auto;
    max-width: 540px;
  }
  img{
    width: 100%;
    object-fit: cover;
    
    @media only screen and (min-width: 1679px){
      min-height: 480px;
    }
    @media only screen and (min-width: 1600px) and (max-width: 1678px){
      min-height: 420px;
    }    
    @media only screen and (min-width: 1440px) and (max-width: 1599px){
      min-height: 400px;
    }
    @media only screen and (min-width: 1200px) and (max-width: 1439px){
      min-height: 360px;
    }
    @media only screen and (min-width: 968px) and (max-width: 1199px){
      min-height: 320px;
    } 
    @media only screen and (max-width: 967px){
      min-height: 250px;
    }    
  }
  i{
    border-radius: 50%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;    
    margin: auto;    
    text-align: center;
    color: #ffffff;
    border: 2px solid #ffffff;
    bottom: 0px;
    
    @media screen and (min-width: 541px){
      width: 80px;
      height: 80px;
      line-height: 80px;
      
      &:before{
        position: relative;
        left: 3px;
      }
    }
    @media screen and (min-width: 421px) and (max-width: 540px){      
      width: 80px;
      height: 80px;
      line-height: 80px;
      
      &:before{
        position: relative;
        left: 3px;
      }
    }    
    @media screen and (max-width: 420px){
      width: 50px;
      height: 50px;
      line-height: 50px;
    }    
  }
  .section-heading{
    @media screen and (max-width: 967px){
      padding: 0 20px;
    }
    @media screen and (max-width: 567px){
      h2{
        font-size: 36px;
        line-height: 36px;
      }
    }
  }
  .video-banner-block{
    width: 100%;    
    overflow: hidden;
    position: relative;

    @media screen and (min-width: 1600px){
      min-height: 720px;
    }
    @media screen and (min-width: 1440px) and (max-width: 1599px){
      min-height: 650px;
    }
    @media screen and (min-width: 1200px) and (max-width: 1439px){
      min-height: 700px;
    }    
    @media screen and (min-width: 1024px) and (max-width: 1199px){
      min-height: 680px;
    }
    @media screen and (min-width: 968px) and (max-width: 1023px){
      min-height: 680px;
    }    
    @media screen and (max-width: 967px){
      overflow: inherit;
      display: grid;
      
      .video-image, .course-content{
        float: none;
        clear: both;
      }
      .course-video{
        display: inherit;
      }
      .course-content{
        order: 2;
      }
    }    
    .course-content{
      background-color: #ffffff;          

      @media screen and (min-width: 968px){
        position: absolute;        
      }
      @media screen and (min-width: 1680px){
        padding: 100px;
        height: 100%;
      }
      @media screen and (min-width: 1440px) and (max-width: 1679px){
        padding: 85px;
        height: 100%;
      }
      @media screen and (min-width: 1200px) and (max-width: 1439px){
        padding: 80px;
        height: 100%;
      }
      @media screen and (min-width: 1024px) and (max-width: 1199px){
        padding: 70px;
      }
      @media screen and (min-width: 968px) and (max-width: 1023px){
        padding: 60px;
      }
      @media screen and (min-width: 568px) and (max-width: 967px){
        padding: 40px;
      }
      @media screen and (min-width: 420px) and (max-width: 567px){
        padding: 35px 20px;
      }
      @media screen and (min-width: 375px) and (max-width: 419px){
        padding: 30px 20px;
      }
      @media screen and (max-width: 374px){
        padding: 25px 20px;
      }
    }
    &.v1{
      .course-content{    
		display: flex;
	    align-items: center;
        
        @media screen and (min-width: 968px){
          width: 62%;
          -webkit-transform: translate(60%, 0%);
          -ms-transform: translate(60%, 0%);
          transform: translate(60%, 0%);
        }
        @media screen and (min-width: 1681px){
          .course-content-inner{
            width: 55%;
            margin-left: auto;
          }
        }
        @media screen and (min-width: 1440px) and (max-width: 1680px){
          .course-content-inner{
            width: 70%;
            margin-left: auto;
          }
        }
        @media screen and (min-width: 968px) and (max-width: 1439px){
          .course-content-inner{
            width: 75%;
            margin-left: auto;
          }
        }
      }
    }
    &.v2{
      .course-content{
		display: flex;
	    align-items: center;        
        @media screen and (min-width: 968px){
          width: 62%; 
          -webkit-transform: translate(0%, 0%);
          -ms-transform: translate(0%, 0%);
          transform: translate(0%, 0%);
        }
        @media screen and (min-width: 1681px){
          .course-content-inner{
            width: 55%;
            margin-right: auto;
          }
        }
        @media screen and (min-width: 1440px) and (max-width: 1680px){
          .course-content-inner{
            width: 70%;
            margin-right: auto;
          }
        }
        @media screen and (min-width: 968px) and (max-width: 1439px){
          .course-content-inner{
            width: 75%;
            margin-right: auto;
          }
        }
      }
      .video-image{
        @media screen and (min-width: 968px){
          position: absolute;
          right: 0;
        }
      }
    }    
    .video-image{    
      position: relative;
      z-index: 9;

      @media screen and (min-width: 1681px){
        width: 60%;
      }
      @media screen and (min-width: 968px) and (max-width: 1680px){
        width: 50%;
      }
    }    
  }
  .course-video{
    width: 100%;
    object-fit: cover;
    
    @media only screen and (min-width: 1600px){
      min-height: 480px;
      max-height: 500px;
    }
    @media only screen and (min-width: 1200px) and (max-width: 1599px){
      min-height: 420px;
      max-height: 500px;
    }
    @media only screen and (min-width: 1024px) and (max-width: 1199px){
      min-height: 350px;
      max-height: 420px;
    }
    @media only screen and (min-width: 968px) and (max-width: 1023px){
      min-height: 350px;
      max-height: 400px;
    }    
    @media only screen and (min-width: 768px) and (max-width: 967px){
      height: 360px;
    }
    @media only screen and (min-width: 568px) and (max-width: 767px){
      height: 320px;
    }
    @media only screen and (min-width: 420px) and (max-width: 567px){
      height: 250px;
    }
    @media only screen and (min-width: 375px) and (max-width: 419px){
      height: 200px;
    }
    @media only screen and (max-width: 374px){
      height: 160px;
    }    
  }
  .video-text-block-inner{
    @media screen and (min-width: 1600px){
      margin-bottom: 110px;
    }
    @media screen and (min-width: 1200px) and (max-width: 1599px){
      margin-bottom: 90px;
    }
    @media screen and (max-width: 1199px){
      margin-bottom: 70px;
    }
  }
}
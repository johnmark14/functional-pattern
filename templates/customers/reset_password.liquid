<div class="user-account">
  <div class="grid__item reset-pwdform text-center">

    {% comment %}
    This form must use 'reset_customer_password'
    {% endcomment %}
    {% form 'reset_customer_password' %}

    <div class="section-header section-header--small">
      <h1 class="section-header__title">{{ 'customer.reset_password.title' | t }}</h1>
    </div>

    <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

    {{ form.errors | default_errors }}

    <label class="label--hidden" for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
    <input type="password" value="" name="customer[password]" id="ResetPassword" placeholder="{{ 'customer.reset_password.password' | t }}" {% if form.errors contains "password" %} class="error"{% endif %}>

    <label class="label--hidden" for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
    <input type="password" value="" name="customer[password_confirmation]" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" id="PasswordConfirmation" {% if form.errors contains "password_confirmation" %} class="error"{% endif %}>

    <p>
      <input type="submit" class="btn" value="{{ 'customer.reset_password.submit' | t }}">
    </p>

    {% endform %}

  </div>
</div>

{% unless page.metafields.featured_image.featured_image == blank and page.metafields.featured_image_m.featured_image_mobile == blank %}
<div class="ourpractioners-hero-section">  
  {% for image in page.metafields.featured_image.featured_image %}
  	<img src="{{ image.src }}" class="lazyload medium-down--hide" alt="{{ image.alt }}" />  
  {% endfor %}  
  {% for mobile_image in page.metafields.featured_image_m.featured_image_mobile %}
  	<img src="{{ mobile_image.src }}" class="lazyload wide--hide post-large--hide large--hide" alt="{{ mobile_image.alt }}" />  
  {% endfor %}    
</div>
{% endunless %}
<div class="page-content text-center">
  <div class="section-header">
    <h1 class="section-header--title">      
      {{ page.title }}          
    </h1>
  </div>
  <div class="rte">
    {{ page.content }}
  </div>    
</div>